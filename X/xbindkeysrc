# swipe 4 left -> switch to previous workspace
"bspc desktop -f prev.occupied.local"
	b:10

# swipe 4 right -> switch to next workspace
"bspc desktop -f next.occupied.local"
	b:11

# swipe 4 up -> floate focused window
"[[ -z $(bspc query -N -n focused.floating) ]] && bspc node focused -t floating || bspc node focused -t tiled"
	b:12

# swipe 4 down -> tile focused window
"[[ -z $(bspc query -N -n focused.floating) ]] && bspc node focused -t floating || bspc node focused -t tiled"
	b:13

# volume up
"~/dotfiles/scripts/volume.sh"
	XF86AudioRaiseVolume

# volume up
"~/dotfiles/scripts/volume.sh -5"
	XF86AudioLowerVolume

# mute
"~/dotfiles/scripts/volume.sh toggle"
	XF86AudioMute

# inc kbd
"~/dotfiles/scripts/kb.sh --inc 5"
	XF86KbdBrightnessUp

# dec kbd
"~/dotfiles/scripts/kb.sh --dec 5"
	XF86KbdBrightnessDown

# inc screen bl
"~/dotfiles/scripts/bl.sh --inc 25"
	XF86MonBrightnessUp

# dec screen bl
"~/dotfiles/scripts/bl.sh --dec 25"
	XF86MonBrightnessDown

# screenshots
"~/dotfiles/scripts/screenshot.sh -w"
	F3

"~/dotfiles/scripts/screenshot.sh -a"
	Shift+F3

"sleep 1 && ~/dotfiles/scripts/screenshot.sh -s"
	XF86LaunchA

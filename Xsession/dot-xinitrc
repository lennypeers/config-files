#!/usr/bin/env zsh

export XDG_SESSION_TYPE=x11 GDK_BACKEND=x11
picom --config ~/.config/picom/picom.conf -b --experimental-backends
systemctl --user import-environment DISPLAY XAUTHORITY
xrdb -merge ~/.Xresources
xset s off
xset s noblank
xbindkeys &

# setting keyboard layout
internal_kb="AT Translated Set 2 keyboard"
setxkbmap \
	-option caps:backspace \
	-device $(xinput --list --id-only "$internal_kb")
setxkbmap -option compose:menu

exec awesome
